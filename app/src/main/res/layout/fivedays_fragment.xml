<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_daylight"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#66000000"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="12dp">


            <TextView
                android:id="@+id/fiveDays_1day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="TextView"
                android:textColor="@color/fiveDaysFragmentTextColor"
                app:layout_constraintEnd_toStartOf="@+id/fiveDays_2day"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fiveDays_2day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/fiveDaysFragmentTextColor"
                app:layout_constraintEnd_toStartOf="@+id/fiveDays_3day"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/fiveDays_1day"
                app:layout_constraintTop_toTopOf="@+id/fiveDays_1day" />

            <TextView
                android:id="@+id/fiveDays_3day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/fiveDaysFragmentTextColor"
                app:layout_constraintEnd_toStartOf="@+id/fiveDays_4day"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/fiveDays_2day"
                app:layout_constraintTop_toTopOf="@+id/fiveDays_2day" />

            <TextView
                android:id="@+id/fiveDays_4day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/fiveDaysFragmentTextColor"
                app:layout_constraintEnd_toStartOf="@+id/fiveDays_5day"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/fiveDays_3day"
                app:layout_constraintTop_toTopOf="@+id/fiveDays_3day" />

            <TextView
                android:id="@+id/fiveDays_5day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/fiveDaysFragmentTextColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/fiveDays_4day"
                app:layout_constraintTop_toTopOf="@+id/fiveDays_4day" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="53dp"
                android:layout_height="59dp"
                android:layout_marginTop="52dp"
                app:layout_constraintEnd_toStartOf="@+id/imageView3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fiveDays_1date"
                app:srcCompat="@drawable/ic_02d" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="53dp"
                android:layout_height="59dp"
                app:layout_constraintEnd_toStartOf="@+id/imageView4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2"
                app:srcCompat="@drawable/ic_02d" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="53dp"
                android:layout_height="59dp"
                app:layout_constraintEnd_toStartOf="@+id/imageView5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/imageView3"
                app:srcCompat="@drawable/ic_02d" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="53dp"
                android:layout_height="59dp"
                app:layout_constraintEnd_toStartOf="@+id/imageView6"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4"
                app:srcCompat="@drawable/ic_02d" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="53dp"
                android:layout_height="59dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="@+id/imageView5"
                app:srcCompat="@drawable/ic_02d" />

            <TextView
                android:id="@+id/fiveDays_1date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="TextView"
                android:textColor="@color/fiveDaysFragmentTextColor"
                app:layout_constraintEnd_toStartOf="@+id/fiveDays_2date"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fiveDays_1day" />

            <TextView
                android:id="@+id/fiveDays_2date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/fiveDaysFragmentTextColor"
                app:layout_constraintEnd_toStartOf="@+id/fiveDays_3date"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/fiveDays_1date"
                app:layout_constraintTop_toTopOf="@+id/fiveDays_1date" />

            <TextView
                android:id="@+id/fiveDays_3date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/fiveDaysFragmentTextColor"
                app:layout_constraintEnd_toStartOf="@+id/fiveDays_4date"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/fiveDays_2date"
                app:layout_constraintTop_toTopOf="@+id/fiveDays_2date" />

            <TextView
                android:id="@+id/fiveDays_4date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/fiveDaysFragmentTextColor"
                app:layout_constraintEnd_toStartOf="@+id/fiveDays_5date"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/fiveDays_3date"
                app:layout_constraintTop_toTopOf="@+id/fiveDays_3date" />

            <TextView
                android:id="@+id/fiveDays_5date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/fiveDaysFragmentTextColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/fiveDays_4date"
                app:layout_constraintTop_toTopOf="@+id/fiveDays_4date" />

            <TextView
                android:id="@+id/fiveDays_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="101dp"
                android:text="TextView"
                android:textColor="@color/fiveDaysFragmentTextColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/fiveDays_temperature2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <TextView
                android:id="@+id/fiveDays_temperature2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/fiveDaysFragmentTextColor"
                app:layout_constraintEnd_toStartOf="@+id/fiveDays_temperature3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/fiveDays_temperature"
                app:layout_constraintTop_toTopOf="@+id/fiveDays_temperature" />

            <TextView
                android:id="@+id/fiveDays_temperature3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/fiveDaysFragmentTextColor"
                app:layout_constraintEnd_toStartOf="@+id/fiveDays_temperature4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/fiveDays_temperature2"
                app:layout_constraintTop_toTopOf="@+id/fiveDays_temperature2" />

            <TextView
                android:id="@+id/fiveDays_temperature4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/fiveDaysFragmentTextColor"
                app:layout_constraintEnd_toStartOf="@+id/fiveDays_temperature5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/fiveDays_temperature3"
                app:layout_constraintTop_toTopOf="@+id/fiveDays_temperature3" />

            <TextView
                android:id="@+id/fiveDays_temperature5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/fiveDaysFragmentTextColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/fiveDays_temperature4"
                app:layout_constraintTop_toTopOf="@+id/fiveDays_temperature4" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/fivedays_progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>